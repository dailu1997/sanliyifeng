page {
  background-color: rgb(244, 244, 244)
}
.none {
  display: none;
}
.body {
  box-sizing: border-box;
  padding: 19rpx;
  background-color: rgb(255, 255, 255);
  margin: 19rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.right {
  float: right;
}
.adviser {
  overflow: hidden;
  height: 100rpx;
  padding: 10rpx;
}
.headPortrait {
  float: left;
  height: 84rpx;
  width: 84rpx;
  border-radius: 50%;
  background-color: #ff3;
  margin-right: 15rpx;
}
.text {
  float:left;
  width: 300rpx;
  height: 92rpx;
  font-size: 32rpx;
  line-height: 38rpx;
}
