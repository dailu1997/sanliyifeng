  font-size: 26rpx;
}
.consultation {
  position: relative;
  float: right;
  padding: 9rpx 20rpx;
  background-color: rgb(199, 166, 138);
  color: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.biao {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: -9rpx;
  right: -9rpx;
  background-color: red;
  border-radius: 50%;
  font-size: 26rpx;
  line-height: 30rpx;
  text-align: center;
}