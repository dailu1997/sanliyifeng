/* pages/my/administration/zhiyetuoke/zhiyetuoke.wxss */
page {
  background-color: #f4f4f4;
}
.top {
  width: 710rpx;
  margin: 0 auto;
  padding: 30rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  color: #df9282;
}
.top text {
  display: inline-block;
  padding: 12rpx 20rpx;
  box-sizing: border-box;
}
.active {
  border-bottom: 1px solid #df9282;
}
.screen {
  line-height: 110rpx;
  padding-left: 15rpx;
  box-sizing: border-box;
  width: 710rpx;
  height: 110rpx;
  background-color: #ebdcd0;
  margin: 0 auto;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.screen-start {
  margin-right: 38rpx;
  font-size: 28rpx;
  width: 168rpx;
  height: 77rpx;
  background-color: #c7a28a;
  text-align: center;
  line-height: 77rpx;
  border-radius: 40rpx;
  color: #fff;
  display: inline-block;
}
.san {
  width: 0rpx;
  border: 12rpx solid #fff;
  border-color: transparent;
  border-top-color: #fff;
}
.search {
  position: relative;
  float: right;
  width: 250rpx;
  height: 70rpx;
  margin-right:35rpx; 
  margin-top: 25rpx;
  border: 1px solid #c7a28a;
  padding-left: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #fff;
}
.img {
  position: absolute;
  top: 15rpx;
  right: 9rpx;
  width: 27rpx;
  height: 41rpx;
}
.guwen {
  overflow: hidden;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  width: 710rpx;
  margin: 20rpx auto 0rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.guwen .image {
  float: left;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-right: 10rpx; 
}
.in { 
  float: left;
  font-size: 32rpx;
}
.in text {
  display: block;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.picture {
  width: 16rpx;
  height: 30rpx;
  float: right;
  margin-right: 10rpx;
  margin-top: 50rpx;
}