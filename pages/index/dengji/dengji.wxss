/* pages/index/dengji/dengji.wxss */
page {
  background-color: #f4f4f4;
}
.body {
  width: 710rpx;
  margin: 20rpx;
  padding-top:50rpx;
  background-color: #fff;
  border-radius: 10rpx; 
  overflow: hidden;
}
.yi {
  width: 500rpx;
  margin: 0 auto; 
  font-size: 40rpx;
  font-weight: 700;
  text-align: center;
}
.come {
  text-align: center;
  width: 500rpx;
  font-size: 30rpx;
  margin: 35rpx auto;
  color: #b0b0b0;
}
.body input {
   height: 90rpx;
   margin: 0 auto;
   font-size: 28rpx;
   padding-left: 40rpx;
   width: 570rpx;
   border: 1px solid #df9282;
   color: #df9282;
   border-radius: 10rpx;
   box-sizing: border-box;
   margin-bottom: 20rpx;
}
.body button {
  height: 90rpx;
  width: 570rpx;
  background-color: #df9282;
  color: #fff;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  font-size: 36rpx;
}
.tap {
  display: inline-block;
  padding: 10rpx 12rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  background-color: #df9282;
  font-size: 24rpx;
}

.he {
  width: 500rpx;
  margin: 50rpx auto;
  display: flex;
  justify-content: center;
  color: #fff;
}
.jin {
  background-color: #f4f4f4;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}
.number {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.function {
  width: 570rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  display: flex;
  justify-content:space-between;
}
.qian {
  display: inline-block;
  padding: 20rpx 25rpx;
  box-sizing: border-box;
  background-color: #e8a770;
  border-radius: 10rpx;
  color: #fff;
}
.sex {
  position: relative;
  height: 90rpx;
   margin: 0 auto;
   font-size: 24rpx;
   padding-left: 40rpx;
   width: 570rpx;
   border: 1px solid #df9282;
   border-radius: 10rpx;
   box-sizing: border-box;
   margin-bottom: 20rpx;
} 
.radio-group {
  width: 150rpx;
  height: 73rpx;
  position: absolute;
  top: 20rpx;
  right: 0rpx;
  font-size: 24rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
}
radio{
    width: 38rpx;
}
 
radio .wx-radio-input{
    border-radius: 10%; 
    width: 28rpx;
    height: 28rpx;
}

radio .wx-radio-input.wx-radio-input-checked{
   border: none;
}
 .radio-group {
   float: right;
 }
/* 选中后的样式 （可根据设计稿需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 10%;
    width: 44rpx; 
    height: 44rpx; 
    line-height: 44rpx;
    text-align: center;
    font-size: 26rpx; /* 对勾大小 26rpx */
    color:#fff; /* 对勾颜色 */
    background:  rgb(223,146,130);
    border-color: rgb(223,146,130);
}