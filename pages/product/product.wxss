page {
    background-color: #F0F0F0;
    font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
}

.logo {
    height: 350rpx;
    width: 100%;
    background: red;
}

.nav {
    width: 100%;
    height: 60rpx;
    display: flex;
    background: white;
    border-bottom: 1px solid #d0d0d0;
}

.default {
    line-height: 60rpx;
    text-align: center;
    flex: 1;
    color: #8e8e8e;
    font-size: 28rpx;
    font-family: italic;
}

.red {
    line-height: 60rpx;
    text-align: center;
    color: #f40;
    flex: 1;
    border-bottom: 1px solid #f40;
    font-size: 28rpx;
}

.show {
    display: block;
    text-align: center;
}

.hidden {
    display: none;
    text-align: center;
}

.produce {
    width: 100%;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.produce_modle {
    margin-top: 10rpx;
    float: left;
    height: 415rpx;
    width: 47.8%;
    margin-left: 5rpx;
}

.mar_left {
    margin-left: 2%;
}

.img {
    height: 350rpx;
    width: 100%;
    border-radius: 10rpx;
}

.text {
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 21rpx;
    color: #0d0d0d;
}

.modle {
    background: white;
    width: 100%;
    float: left;
}

.yuyue_text {
    font-size: 35rpx;
    margin-top: 40rpx;
    width: 30%;
    text-align: center;
    background: white;
    margin: 0 auto;
    float: left;
    z-index: 10;
    height: 30rpx;
    color: #bbb8b1;
    margin-left: 35%;
    position: relative;
}

.yuyue_border {
    height: 1px;
    width: 90%;
    margin-top: -3rpx;
    float: left;
    margin-left: 5%;
    border-bottom: 1px solid #bbb8b1;
}

.yueyue_eng_text {
    width: 100%;
    float: left;
    color: #bbb8b1;
    font-size: 25rpx;
    margin-top: 15rpx;
    text-align: center;
    position: relative;
    padding-bottom: 15rpx;
}

.shopping_border {
    height: 300rpx;
    width: 100%;
    float: left;
    margin-top: 15rpx;
    background: white;
}

.shopping_left {
    height: 300rpx;
    width: 50%;
    float: left;
}

.shopping_img {
    float: right;
    height: 300rpx;
    width: 300rpx;
}

.shopping_text {
    color: #666666;
    font-size: 30rpx;
    text-align: center;
}

.shopping_text1 {
    font-size: 40rpx;
    text-align: center;
    color: #bbb8b1;
}

.mar-top {
    margin-top: 70rpx;
}

.bottom_img_border {
    margin-top: 0rpx;
    float: left;
    height: 100rpx;
    width: 100%;
    background: #F9F9F9;
}

.bottom_img {
    height: 85rpx;
    width: 216rpx;
    display: block;
    margin: 0 auto;
    margin-top: 10rpx;
}